/* style1.css â€” Modern, Elegant, and Fully Responsive */

:root {
  /* ===== MODERN TEAL + AMBER COLOR SYSTEM ===== */
  --bg: #0d0f12;                     /* Deep charcoal base */
  --surface: #16191f;                /* Slightly lighter surface */
  --card: #1e222b;                   /* Card background */
  --text: #f0f5ff;                   /* Crisp off-white */
  --muted: #a0aec0;                  /* Soft readable gray */
  
  /* Primary: Teal gradient */
  --brand: #22d3ee;                  /* Vibrant electric teal */
  --brand-hover: #06b6d4;
  --brand-glow: rgba(34, 211, 238, 0.4);
  
  /* Secondary: Warm amber */
  --brand-2: #fbbf24;                /* Golden amber */
  
  /* Status colors */
  --ok: #34d399;                     /* Emerald success */
  --warn: #fcd34d;                   /* Soft warning yellow */
  --err: #f87171;                    /* Gentle coral error */

  /* ===== BORDERS & EFFECTS ===== */
  --outline: rgba(255, 255, 255, 0.06);
  --outline-focus: rgba(34, 211, 238, 0.5);
  
  /* ===== LAYOUT & EFFECTS ===== */
  --radius: 20px;
  --gap: 28px;
  --shadow: 
    0 20px 50px rgba(0, 0, 0, 0.6),
    inset 0 1px 0 rgba(255, 255, 255, 0.02);
  --shadow-card: 
    0 12px 36px rgba(0, 0, 0, 0.4),
    0 0 0 1px var(--outline);
  --transition: all 0.35s cubic-bezier(0.22, 1, 0.36, 1);
}

/* ===== RESET & BASE ===== */
*, *::before, *::after {
  box-sizing: border-box;
}
html {
  scroll-behavior: smooth;
}
body {
  margin: 0;
  padding: 0;
  background: 
    linear-gradient(145deg, var(--bg), #0a0c0f 70%),
    radial-gradient(circle at 10% 20%, rgba(34, 211, 238, 0.04) 0%, transparent 40%),
    radial-gradient(circle at 90% 80%, rgba(251, 191, 36, 0.03) 0%, transparent 40%);
  color: var(--text);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}
img {
  max-width: 100%;
  display: block;
  border-radius: 14px;
  transition: opacity 0.25s;
}
a {
  color: var(--brand-2);
  text-decoration: none;
  transition: color 0.2s;
}
a:hover {
  color: #ffffff;
}
small {
  color: var(--muted);
  font-size: 0.875rem;
}

.container {
  width: min(1320px, 95%);
  margin: auto;
}

/* ===== HEADER ===== */
.header {
  position: sticky;
  top: 0;
  z-index: 40;
  background: 
    linear-gradient(135deg, rgba(22, 25, 31, 0.94), rgba(18, 20, 27, 0.97)),
    radial-gradient(circle at top right, rgba(34, 211, 238, 0.06), transparent 40%);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border-bottom: 1px solid var(--outline);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.02);
}
.header-wrap {
  display: flex;
  align-items: center;
  gap: var(--gap);
  padding: 18px 0;
}
.brand {
  font-weight: 800;
  letter-spacing: 1px;
  background: linear-gradient(90deg, var(--brand), var(--brand-2));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-size: 26px;
  white-space: nowrap;
  text-shadow: 0 0 16px rgba(34, 211, 238, 0.25);
}

/* ===== SEARCH & NAV ===== */
.searchbar {
  display: flex;
  gap: 12px;
  flex: 1;
  min-width: 300px;
}
.searchbar input,
.searchwide input {
  flex: 1;
  padding: 14px 18px;
  border-radius: 16px;
  border: 1px solid var(--outline);
  background: var(--card);
  color: var(--text);
  outline: none;
  font-size: 1rem;
  transition: var(--transition);
}
.searchbar input:focus,
.searchwide input:focus {
  border-color: var(--brand);
  box-shadow: 
    0 0 0 4px var(--outline-focus),
    inset 0 0 8px rgba(34, 211, 238, 0.15);
}
.searchbar button {
  border: 0;
  border-radius: 16px;
  padding: 14px 22px;
  background: linear-gradient(135deg, var(--brand), #0891b2);
  color: var(--bg);
  cursor: pointer;
  font-weight: 600;
  white-space: nowrap;
  transition: var(--transition);
  box-shadow: 0 4px 14px rgba(34, 211, 238, 0.3);
}
.searchbar button:hover {
  background: linear-gradient(135deg, var(--brand-hover), #0e7490);
  transform: translateY(-2px);
  box-shadow: 0 6px 18px rgba(34, 211, 238, 0.45);
}

.nav {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  justify-content: flex-end;
}
.nav a {
  padding: 12px 16px;
  border-radius: 14px;
  border: 1px solid var(--outline);
  color: var(--text);
  font-weight: 500;
  transition: var(--transition);
}
.nav a:hover {
  border-color: var(--brand);
  background: rgba(34, 211, 238, 0.12);
  color: var(--brand);
}
.nav .cart-link {
  background: linear-gradient(90deg, rgba(34, 211, 238, 0.18), transparent);
  border-color: rgba(34, 211, 238, 0.45);
}

/* ===== FLASH MESSAGES ===== */
.flash-wrap {
  margin-top: 20px;
}
.flash {
  padding: 14px 20px;
  border-radius: 14px;
  margin-bottom: 14px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 12px;
  backdrop-filter: blur(8px);
}
.flash.success {
  background: rgba(52, 211, 153, 0.22);
  border: 1px solid rgba(52, 211, 153, 0.5);
  color: #b0f8e0;
}
.flash.info {
  background: rgba(34, 211, 238, 0.22);
  border: 1px solid rgba(34, 211, 238, 0.5);
  color: #b0f8ff;
}
.flash.warning,
.flash.warn {
  background: rgba(252, 211, 77, 0.22);
  border: 1px solid rgba(252, 211, 77, 0.5);
  color: #fff0c0;
}
.flash.danger,
.flash.error {
  background: rgba(248, 113, 113, 0.22);
  border: 1px solid rgba(248, 113, 113, 0.5);
  color: #ffc0c0;
}

/* ===== HERO ===== */
.hero {
  padding: 80px 0;
  border-bottom: 1px solid var(--outline);
  background:
    radial-gradient(1200px 700px at 10% -10%, rgba(34, 211, 238, 0.12), transparent),
    radial-gradient(1200px 700px at 90% -10%, rgba(251, 191, 36, 0.12), transparent),
    linear-gradient(to bottom, var(--bg), #0f1114);
}
.hero h1 {
  font-size: 52px;
  margin: 0 0 16px;
  font-weight: 800;
  letter-spacing: -0.8px;
  background: linear-gradient(to right, #ffffff, var(--brand));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 
    0 0 20px rgba(34, 211, 238, 0.3),
    0 0 40px rgba(251, 191, 36, 0.2);
}
.hero p {
  color: var(--muted);
  margin: 0 0 28px;
  font-size: 1.2rem;
  max-width: 680px;
  line-height: 1.6;
}
.hero-actions {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

/* ===== BUTTONS ===== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14px 24px;
  border-radius: 16px;
  background: linear-gradient(135deg, var(--brand), #0891b2);
  color: var(--bg);
  border: 0;
  cursor: pointer;
  text-align: center;
  font-weight: 600;
  font-size: 1.05rem;
  transition: var(--transition);
  box-shadow: 
    0 6px 20px rgba(34, 211, 238, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}
.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s;
}
.btn:hover {
  background: linear-gradient(135deg, var(--brand-hover), #0e7490);
  transform: translateY(-4px);
  box-shadow: 
    0 10px 28px rgba(34, 211, 238, 0.6),
    0 0 0 1px rgba(255, 255, 255, 0.08);
}
.btn:hover::before {
  left: 100%;
}
.btn.outline {
  background: transparent;
  border: 1px solid var(--outline);
  color: var(--text);
  box-shadow: none;
}
.btn.outline:hover {
  border-color: var(--brand);
  background: rgba(34, 211, 238, 0.15);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
}
.btn.warn {
  background: linear-gradient(135deg, var(--warn), #f59e0b);
  color: var(--bg);
  box-shadow: 0 6px 18px rgba(252, 211, 77, 0.3);
}
.btn.ok {
  background: linear-gradient(135deg, var(--ok), #10b981);
  color: var(--bg);
  box-shadow: 0 6px 18px rgba(52, 211, 153, 0.3);
}
.btn.secondary {
  background: linear-gradient(135deg, var(--brand-2), #f59e0b);
  color: var(--bg);
  box-shadow: 0 6px 20px rgba(251, 191, 36, 0.4);
}
.btn.secondary:hover {
  background: linear-gradient(135deg, #fcd34d, #d97706);
  box-shadow: 0 10px 28px rgba(251, 191, 36, 0.6);
}

/* ===== SECTIONS & GRID ===== */
.section-title {
  margin: 40px 0 22px;
  font-size: 32px;
  font-weight: 800;
  color: var(--text);
  position: relative;
}
.section-title::after {
  content: '';
  display: block;
  width: 70px;
  height: 4px;
  background: linear-gradient(to right, var(--brand), var(--brand-2));
  border-radius: 2px;
  margin-top: 10px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 28px;
}
.card {
  background: linear-gradient(140deg, var(--card), #242934);
  border: 1px solid var(--outline);
  border-radius: var(--radius);
  box-shadow: var(--shadow-card);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: var(--transition);
  position: relative;
}
.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(to right, var(--brand), var(--brand-2));
  opacity: 0;
  transition: opacity 0.3s ease;
}
.card:hover {
  transform: translateY(-6px);
  border-color: rgba(34, 211, 238, 0.4);
  box-shadow: 
    0 16px 40px rgba(0, 0, 0, 0.45),
    0 0 0 1px rgba(34, 211, 238, 0.3);
}
.card:hover::before {
  opacity: 1;
}
.card-body {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}
.muted {
  color: var(--muted);
  font-size: 0.95rem;
}
.price {
  font-weight: 800;
  color: var(--brand);
  font-size: 22px;
  margin-top: 6px;
}

/* ===== PILL NAVIGATION ===== */
.pill-row {
  display: flex;
  flex-wrap: wrap;
  gap: 14px;
  margin: 20px 0;
}
.pill {
  padding: 12px 20px;
  border-radius: 50px;
  border: 1px solid var(--outline);
  background: var(--surface);
  color: var(--text);
  font-weight: 600;
  transition: var(--transition);
  cursor: pointer;
}
.pill:hover,
.pill.active {
  border-color: var(--brand);
  background: rgba(34, 211, 238, 0.2);
  color: var(--brand);
}

/* ===== FORMS ===== */
input[type="number"],
input[type="text"],
input[type="email"],
input[type="password"],
input[type="tel"],
select,
textarea {
  width: 100%;
  padding: 14px 18px;
  border-radius: 16px;
  border: 1px solid var(--outline);
  background: var(--card);
  color: var(--text);
  outline: none;
  font-size: 1rem;
  transition: var(--transition);
}
input:focus,
select:focus,
textarea:focus {
  border-color: var(--brand);
  box-shadow: 
    0 0 0 4px var(--outline-focus),
    inset 0 0 8px rgba(34, 211, 238, 0.15);
}
textarea {
  min-height: 150px;
  resize: vertical;
}
label {
  display: flex;
  flex-direction: column;
  gap: 10px;
  font-size: 1rem;
  font-weight: 600;
  color: var(--text);
}

.form {
  display: flex;
  flex-direction: column;
  gap: 24px;
}
.form-inline {
  display: flex;
  gap: 16px;
  align-items: end;
  flex-wrap: wrap;
}

/* ===== CART & CHECKOUT ===== */
.cart-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24px;
  gap: 20px;
  flex-wrap: wrap;
}
.subtotal {
  font-size: 22px;
  font-weight: 700;
}
.subtotal strong {
  color: var(--brand);
}

.checkout-grid {
  display: grid;
  grid-template-columns: 1.3fr 0.9fr;
  gap: 32px;
}
.summary {
  list-style: none;
  margin: 0;
  padding: 0;
  border: 1px solid var(--outline);
  border-radius: 18px;
  background: var(--surface);
  box-shadow: var(--shadow-card);
}
.summary li {
  padding: 16px 24px;
  border-bottom: 1px solid var(--outline);
  display: flex;
  justify-content: space-between;
  font-size: 1.05rem;
}
.summary li:last-child {
  border-bottom: none;
}
.summary li.total {
  font-weight: 800;
  font-size: 24px;
  color: var(--brand);
  background: rgba(34, 211, 238, 0.12);
  margin-top: 10px;
  border-radius: 0 0 18px 18px;
}

/* ===== TABLES ===== */
.table-wrap {
  background: var(--surface);
  border: 1px solid var(--outline);
  border-radius: 18px;
  overflow: hidden;
  box-shadow: var(--shadow-card);
}
table {
  width: 100%;
  border-collapse: collapse;
}
th,
td {
  padding: 16px 24px;
  border-bottom: 1px solid var(--outline);
  text-align: left;
  vertical-align: middle;
}
th {
  background: rgba(255, 255, 255, 0.03);
  font-weight: 700;
  color: var(--text);
}

/* ===== BADGES & STATUS ===== */
.badge {
  display: inline-block;
  padding: 8px 16px;
  border-radius: 50px;
  border: 1px solid var(--outline);
  font-size: 0.9rem;
  font-weight: 600;
}
.badge.active {
  background: rgba(52, 211, 153, 0.25);
  color: var(--ok);
  border-color: rgba(52, 211, 153, 0.5);
}
.badge.expired {
  background: rgba(248, 113, 113, 0.25);
  color: var(--err);
  border-color: rgba(248, 113, 113, 0.5);
}
.badge.none {
  background: rgba(160, 174, 192, 0.15);
  color: var(--muted);
  border-color: var(--outline);
}

.kv {
  display: flex;
  justify-content: space-between;
  gap: 24px;
  padding: 14px 0;
  border-bottom: 1px solid var(--outline);
}
.kv:last-child {
  border-bottom: none;
}

/* ===== FACE CAPTURE MODAL ===== */
.face-capture-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(10, 12, 15, 0.96);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40px;
  color: var(--text);
}
.face-instructions {
  text-align: center;
  max-width: 750px;
  margin-bottom: 36px;
  font-size: 24px;
  line-height: 1.5;
  font-weight: 600;
  background: linear-gradient(to right, var(--text), var(--brand));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}
.webcam-preview {
  width: 100%;
  max-width: 850px;
  border-radius: var(--radius);
  overflow: hidden;
  box-shadow: 0 24px 60px rgba(0, 0, 0, 0.7);
  background: #000;
  aspect-ratio: 16/9;
  border: 1px solid var(--outline);
}
.face-actions {
  margin-top: 36px;
  display: flex;
  gap: 24px;
  flex-wrap: wrap;
  justify-content: center;
}

/* ===== PROFILE & ORDERS ===== */
.profile-section,
.success-card {
  background: var(--surface);
  border: 1px solid var(--outline);
  border-radius: 20px;
  padding: 28px;
  box-shadow: var(--shadow-card);
  margin-bottom: var(--gap);
}
.order-card {
  background: var(--card);
  border: 1px solid var(--outline);
  border-radius: var(--radius);
  padding: 24px;
  margin-bottom: var(--gap);
  box-shadow: var(--shadow-card);
}

/* ===== FOOTER ===== */
.footer {
  margin-top: 70px;
  padding: 50px 0 40px;
  border-top: 1px solid var(--outline);
  background: 
    linear-gradient(to top, rgba(13, 15, 18, 0.95), rgba(18, 20, 27, 0.85)),
    radial-gradient(circle at center, rgba(251, 191, 36, 0.03), transparent 60%);
}
.footer-wrap {
  text-align: center;
  color: var(--muted);
  font-size: 1rem;
}
.row2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
  margin-bottom: 24px;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 980px) {
  .checkout-grid {
    grid-template-columns: 1fr;
  }
  .hero h1 {
    font-size: 42px;
  }
}
@media (max-width: 800px) {
  .header-wrap {
    flex-wrap: wrap;
  }
  .grid {
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  }
  .row2 {
    grid-template-columns: 1fr;
  }
  .nav {
    width: 100%;
    justify-content: center;
  }
  .face-capture-modal {
    padding: 24px;
  }
  .webcam-preview {
    max-width: 100%;
  }
  .section-title {
    font-size: 26px;
  }
  .section-title::after {
    width: 50px;
  }
}

/* ===== Claim form / page refinements (for claim_warranty_form.html) ===== */
.back-link {
  display: inline-block;
  margin-bottom: 18px;
  color: var(--brand);
  font-weight: 700;
  padding: 8px 12px;
  border-radius: 10px;
  border: 1px solid transparent;
}
.back-link:hover {
  background: rgba(34,211,238,0.04);
  border-color: rgba(34,211,238,0.06);
}

/* Claim card specifics */
.claim-card { 
  margin-top: 8px;
  border-radius: 18px;
  overflow: visible;
}
.claim-card .card-header {
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
  padding:18px 20px;
  border-bottom: 1px solid var(--outline);
}
.card-title { font-size: 20px; margin: 0; }
.card-header-actions { display:flex; align-items:center; gap:12px; }

/* product badge style */
.product-badge {
  padding: 8px 14px;
  border-radius: 999px;
  font-weight: 700;
  font-size: 0.95rem;
  color: var(--text);
  background: linear-gradient(90deg, rgba(34,211,238,0.06), rgba(251,191,36,0.03));
  border: 1px solid rgba(255,255,255,0.03);
}

/* card body spacing */
.claim-card .card-body {
  padding: 18px 20px;
  display:block;
}

/* Form layout */
.claim-form .form-row {
  margin-bottom: 18px;
}
.claim-form label {
  font-weight: 700;
  color: var(--text);
  margin-bottom: 8px;
  display:block;
}
.claim-form textarea {
  min-height: 160px;
  resize: vertical;
  border-radius: 14px;
  padding: 14px 16px;
  font-size: 1rem;
  border: 1px solid var(--outline);
  background: var(--card);
  color: var(--text);
  transition: var(--transition);
}
.claim-form textarea:focus {
  border-color: var(--brand);
  box-shadow: 0 0 0 6px rgba(34,211,238,0.06);
}

/* inline footer row with date + submit CTA */
.claim-footer {
  display: flex;
  gap: 16px;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 6px;
}
.field-inline { min-width: 220px; display:flex; flex-direction:column; gap:8px; }
.field-inline input[type="date"] {
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--outline);
  background: var(--card);
  color: var(--text);
  font-weight: 600;
}
.actions-inline {
  margin-left: auto;
}
.actions-inline .btn {
  padding: 12px 20px;
  border-radius: 12px;
  font-weight: 800;
  box-shadow: 0 10px 28px rgba(34,211,238,0.08);
}

/* smaller screens */
@media (max-width: 720px) {
  .claim-footer { flex-direction: column; align-items: stretch; gap: 12px; }
  .actions-inline { margin-left: 0; display:flex; justify-content:flex-end; }
  .field-inline { width:100%; min-width:auto; }
  .card-header { padding: 14px; }
  .claim-card .card-body { padding: 14px; }
}

/* flash alignment inside card */
.flash-wrap { margin-bottom: 12px; }


/* ===== Product field & form polish for claim form ===== */
.product-block {
  margin-bottom: 16px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

/* Label (reuses existing label styling but ensures consistent weight/spacing) */
.form-label {
  font-weight: 700;
  color: var(--text);
  font-size: 0.98rem;
}

/* Read-only product input that looks like the rest of your inputs but cannot be edited */
.product-name-field {
  width: 100%;
  padding: 12px 14px;
  border-radius: 14px;
  border: 1px solid var(--outline);
  background: linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.005));
  color: var(--text);
  font-weight: 700;
  font-size: 1rem;
  white-space: normal;           /* allow wrapping */
  overflow: hidden;
  text-overflow: ellipsis;      /* if single-line display preferred */
  display: block;
  line-height: 1.4;
}

/* Make long product names wrap, but keep a single-line clipped appearance on very narrow UIs */
@media (min-width: 640px) {
  /* On larger screens, show full wrapping so long names flow into multiple lines */
  .product-name-field {
    white-space: normal;
    overflow-wrap: break-word;
    hyphens: auto;
  }
}

/* Add subtle focus/hover for accessibility even if readonly */
.product-name-field:focus,
.product-name-field:hover {
  border-color: var(--brand);
  box-shadow: 0 0 0 6px rgba(34,211,238,0.06);
}

/* If you prefer a single-line truncated product display, uncomment this rule instead:
.product-name-field { white-space: nowrap; text-overflow: ellipsis; overflow: hidden; }
*/

/* Ensure label spacing aligns with other form elements */
.claim-card .card-body .form-row,
.product-block {
  margin-bottom: 18px;
}

/* Ensure mobile spacing */
@media (max-width: 720px) {
  .product-name-field { font-size: 0.95rem; padding: 10px 12px; }
  .field-inline input[type="date"] { width: 100%; }
  .actions-inline { width: 100%; display:flex; justify-content:flex-end; }
}


.brand {
  display: flex;
  align-items: center;
  gap: 8px; /* space between logo and text */
}

.brand img {
  height: 36px;
  width: auto;
}
.brand span {
  font-weight: 700;
  font-size: 1.4rem;
  color: var(--brand);
}

